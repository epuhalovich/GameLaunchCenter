<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc2017.gamecentre.slidingtiles.SlidingTilesStartingActivity">

    <Button
        android:id="@+id/UndoButton"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="56dp"
        android:background="@drawable/custom_button_empty"
        android:text="@string/undo" />

    <fall2018.csc2017.gamecentre.slidingtiles.GestureDetectGridView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/UndoButton"
        tools:context="fall2018.csc2017.gamecentre.slidingtiles.SlidingTilesGameActivity"/>

    <Button
        android:id="@+id/save"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginEnd="95dp"
        android:layout_toStartOf="@+id/UndoButton"
        android:background="@drawable/custom_button_empty"
        android:text="Save" />

</RelativeLayout>

