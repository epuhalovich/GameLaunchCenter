<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@drawable/background"
    tools:context=".LogInActivity">

    <EditText
        android:id="@+id/usernamea"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="7dp"
        android:autofillHints=""
        android:background="@null"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:hint="        Username"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/passworda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/passworda"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="7dp"
        android:autofillHints=""
        android:background="@null"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="        Password"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/signina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernamea" />

    <Button
        android:id="@+id/signina"
        style="@android:style/Widget.DeviceDefault.Button.Small"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="117dp"
        android:background="@drawable/buttonshape"
        android:text="@string/log_in"
        android:textColor="#82C5FF"
        app:layout_constraintBottom_toTopOf="@+id/textboxa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passworda"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/textboxa"
        android:layout_width="337dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="23dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signina" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="84dp"
        android:layout_height="22dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="14dp"
        android:text="@string/please_log_in"
        app:layout_constraintBottom_toTopOf="@+id/usernamea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/sign_in"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>